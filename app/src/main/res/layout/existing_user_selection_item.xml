<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dp"
    android:layout_marginStart="2dp"
    android:layout_marginEnd="2dp"
    android:gravity="center"
    android:layout_marginBottom="4dp"
    android:id="@+id/container_existing_user"
    android:orientation="horizontal"
    tools:ignore="RtlSymmetry">

    <ImageView
        android:id="@+id/img_existing_user"
        android:layout_width="90dp"
        android:layout_height="90dp"/>

    <ImageView
        android:id="@+id/delete_user_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:background="@drawable/ic_delete_forever_black_24dp"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@id/img_existing_user"/>

    <TextView
        android:id="@+id/username_existing_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/img_existing_user"
        android:text="@string/username_prototype"
        android:textAlignment="center"
        android:layout_marginStart="7dp"
        android:layout_centerVertical="true"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="19sp"
        android:textStyle="bold" />

</RelativeLayout>