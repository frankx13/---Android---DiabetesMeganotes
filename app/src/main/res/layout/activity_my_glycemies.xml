<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyGlycemiesActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.6"
        android:background="@drawable/ic_waterfall_reduced" />

    <TextView
        android:id="@+id/title_app_TV_glycemies"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="@string/glycemies"
        android:textAlignment="center"
        android:drawableEnd="@drawable/ic_add_circle_black_24dp"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/week_container_glycemies"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_app_TV_glycemies"
        android:orientation="vertical">

        <TextView
            android:id="@+id/seven_days_average_glycemy_TV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/seven_days_average"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/seven_days_average_insulin_TV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/insulin_average_seven_days"
            android:textAlignment="center"
            android:layout_marginTop="15dp"
            android:textColor="@android:color/black"
            android:textSize="16sp"/>

    </LinearLayout>
</RelativeLayout>